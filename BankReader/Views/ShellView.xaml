    <Grid>
        <TabControl x:Name="Tabs" DisplayMemberPath="DisplayName" SelectedItem="{Binding ActiveItem}"/>
        <controls:ProgressRing Height="10"
                               IsActive="{Binding IsBusy, Mode=TwoWay}" />
    </Grid>
</controls:MetroWindow>